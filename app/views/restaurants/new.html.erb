<h1>New Restaurant Form</h1>

<%= form_for @restaurant do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br /><br />

  <%= f.label :address %>
  <%= f.text_field :address %>
  <br /><br />

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br /><br />

  <%= f.label :state %>
  <%= f.text_field :state %>
  <br /><br />

  <%= f.label :zip %>
  <%= f.text_field :zip %>
  <br /><br />

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br /><br />

  <%= f.submit "Add Restaurant to List" %>

<% end %>
