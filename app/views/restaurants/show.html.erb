<h1><%= @restaurant.name %></h1>
<p>
  <%= @restaurant.address %>
  <%= @restaurant.city %>
  <%= @restaurant.state %>
  <%= @restaurant.zip %>
  <%= @restaurant.description %>
</p>

<h2>Reviews</h2>
<ul>
<% @reviews.each do |review| %>
  <li>
    <%= review.rating %> -- <%= review.body %> -- <%= review.created_at.strftime("%B %d %Y") %>
  </li>
<% end %>
</ul>

<br />

<%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>
<%= link_to "List of Restaurants", root_path %>
