<h2>Review Form for <%= @restaurant.name %></h2>

<%= form_for [@restaurant, @review] do |f| %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br /><br />

  <%= f.label :body, "Review" %>
  <%= f.text_area :body %>
  <br /><br />

  <%= f.submit "Add Review" %>

<% end %>

<br /><br />
<br /><br />

<%= link_to "List of Restaurants", root_path %>
